{
  "manifest_version": 2,

  "name": "highlight",
  "description": "Save highlighted pieces of text to fieldbook",
  "version": "1.0",
  "background": {
	"scripts":["public/js/background.js"]
  }, 
  "browser_action": {
    "default_icon": "public/img/extension-icon.png"
  },
  "content_scripts":[{
	 "matches": ["*://*/*"],
     "js": ["public/js/script.js"]
  }],
  "permissions": [
    "activeTab",
    "storage",
	"notifications"
  ]
}
